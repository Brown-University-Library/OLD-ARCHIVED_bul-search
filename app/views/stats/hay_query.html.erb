<style>
  .barcode {
    font-family: "Libre Barcode 128 Text", cursive;
    font-size: 30px;
    white-space: nowrap; /* thanks Kerri! */
  }

  .callnumber {
    white-space: nowrap;
  }
</style>

<h2>Hay Query Test2</h2>
<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Order</th>
        <th scope="col">Code2</th>
        <th scope="col">Location</th>
        <th scope="col">Status</th>
        <th scope="col">Copy</th>
        <th scope="col">Barcode</th>
        <th scope="col">Callnumber</th>
        <th scope="col">Title</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |r| %>
        <tr>
          <th scope="row"><%= r["RecordNum"] %></th>
          <td><%= r["DisplayOrder"] %></td>
          <td><%= r["Code2"] %></td>
          <td><%= r["LocationCode"] %></td>
          <td><%= r["StatusCode"] %></td>
          <td><%= r["CopyNum"] %></td>
          <td class="barcode"><%= r["BarCode"] %></td>
          <td class="callnumber"><%= r["CallNumber"] %></td>
          <td><%= r["BestTitle"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

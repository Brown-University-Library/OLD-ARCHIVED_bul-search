<%= @message %>

<% @documents.each do |document| %>
  <% info = document.to_email_info %>
  ======
  <%= "Title: #{info.title}" %>
  <%= "Author: #{info.author}" %>
  <%= "Format: #{info.format}" %>
  <%= "Language: #{info.language}" %>
  <% info.items.each do |item| %>
    Location: <%= item.location_text %>, Call number: <%= item.callnumber %> <br/>
  <% end %>
  Bookmark: <%= polymorphic_url(document, @url_gen_params) %>
<% end %>

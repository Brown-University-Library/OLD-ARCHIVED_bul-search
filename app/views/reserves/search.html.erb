<h1>In-Library Course Reserves</h1>
<div>
<%= form_tag(reserves_search_path, method: "get") do %>
  <div>
    <%= label_tag(:course_num, "Course #") %>
    <%= text_field_tag(:course_num, @course_num) %>
  </div>
  <div>
    <%= label_tag(:instructor, "Instructor") %>
    <%= text_field_tag(:instructor, @instructor) %>
  </div>
  <%= submit_tag("Search") %>
<% end %>

<div>
  <% if @no_courses_msg %>
    <p><%= @no_courses_msg %></p>
  <% else %>
    <h3>The following courses were found</h3>
    <table>
      <tr>
        <th>Course #</th>
        <th>Course Name</th>
        <th>Professor</th>
      </tr>
    <% @courses.each do |c| %>
      <tr>
        <td><%= link_to(c.full_number, reserves_show_path(classid: c.classid, classnumber: c.number_url)) %></td>
        <td><%= c.name %></td>
        <td><%= c.instructor %></td>
      </p>
      </tr>
    <% end %>
  </table>
  <% end %>
</div>
</div>

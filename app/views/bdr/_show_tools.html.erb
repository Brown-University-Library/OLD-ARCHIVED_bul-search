<div class="panel panel-default show-tools">
  <div class="panel-heading">
    <%= t('blacklight.tools.title') %>
  </div>

  <div class="panel-body">
  <ul class="nav">
      <%-
      #Removing most tools in BDR controller since they are expecting MARC records and won't work without development.

      #This was failing in Blacklight v5.8.2
      #-- render_show_doc_actions @document --
      -%>
    <% if @document.respond_to?( :to_email_text ) %>
      <li class="email">
      <%= link_to t('blacklight.tools.email'), email_bdr_path(:id => @document), {:id => 'emailLink', :data => {:ajax_modal => "trigger"}} %>
      </li>
    <%- end -%>
    <%- if @document.respond_to?( :to_sms_text ) -%>
      <li class="sms">
      <%= link_to t('blacklight.tools.sms'), sms_bdr_path(:id => @document), {:id => 'smsLink', :data => {:ajax_modal => "trigger"}} %>
      </li>
    <%- end -%>
  </ul>
  </div>
</div>
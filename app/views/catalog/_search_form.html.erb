  <%= form_tag search_action_url, :method => :get, :class => 'search-query-form form-inline clearfix navbar-form' do %>
    <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>

    <% @id = "q" %>
    <% @autofocus = false %>
    <% @placeholder = t('blacklight.search.form.q') %>
    <% @div_classes = "input-group col-md-9 col-md-offset-1" %>
    <% if local_assigns[:home_page] == true %>
      <!-- we are rendering the search box on the home page -->
      <% @id = "q2" %>
      <% @autofocus = true %>
      <% @placeholder = "" %>
      <% @div_classes = "input-group col-md-9" %>
      <h1 style="margin-top: 0px;">Welcome to Josiah</h1>
      <p>Enter keywords to search library resources</p>
    <% end %>

    <div class="<%= @div_classes %>">
      <% unless search_fields.empty? || @easy_search == true || @libweb_search == true %>
        <span class="input-group-addon">
          <label for="search_field" class="sr-only"><%= t('blacklight.search.form.search_field.label') %></label>
          <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search_field") %>
          <span class="sr-only"><%= t('blacklight.search.form.search_field.post_label') %></span>
        </span>
      <% end %>
      <label for="<%= @id %>" class="sr-only">Search</label>
      <%= text_field_tag :q, clean_search_term(params[:q]), :placeholder => @placeholder, :class => "search_q q form-control", :id => @id, :autofocus => @autofocus %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary search-btn" id="search">
          <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
          <span class="glyphicon glyphicon-search"></span>
        </button>
        </span>
      </div>
      <% if @easy_search == true && @has_query == true %>
        <span class="start-over"><%= link_to "Start over", @easy %></span>
      <% end %>

      <% if local_assigns[:home_page] == true %>
        <p style="padding-top: 10px;">Search for books, articles, periodicals,
          musical scores, maps, theses and dissertations, sound recordings,
          videos, the Brown Digital Repository (BDR), the Library website,
          and more. Learn <%= link_to("about Josiah", easy_about_path()) %>.</p>
      <% end %>
  <% end %>

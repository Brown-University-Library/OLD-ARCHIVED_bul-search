{{#if this.other}}
    <h3 class="bento-header">
        <a href="{{ this.more}}">{{#if this.icon}}<i class="fa fa-{{this.icon}}"></i>{{/if}}{{this.box}}</a>
        {{#if this.info}}<button type="button" class="btn btn-sm info-box" data-content="{{ this.info }}">
        <i class="fa fa-info"></i>
        <span class="sr-only">Information</span>
        </button>{{/if}}
    </h3>
{{/if}}
<ul class="list-unstyled">
    {{#each docs}}
    <li>
        <a href="{{this.link}}">{{truncate this.title_display ../max_title_length}}</a>
        <br/>
        <small>
            {{#if this.author_text}}{{this.author_text}}.&nbsp;{{/if}}
            {{#if this.pub_date }}{{this.pub_date}}{{/if}}
            {{#if this.online }}
                <a href="{{this.link}}" class="label label-info">Online</a>
            {{/if}}
        </small>
    </li>
    {{/each}}
</ul>
<div class="more center-block">
    <a href="{{this.more}}">View {{this.total}} results &raquo;</a>
    {{#if this.advanced}}
      <br/>
      or use the <a href="{{this.advanced}}">advanced book search</a>
    {{/if}}
</div>
